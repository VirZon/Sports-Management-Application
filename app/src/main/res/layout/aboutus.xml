<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examplea.prageet.myapplication.mEvents.Handball">

    <RelativeLayout
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel1"
        >

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/about_us"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:id="@+id/img"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_below="@id/img"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#E6E6E6"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="8dp"
            android:layout_margin="5sp"
            android:padding="5sp"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:id="@+id/contact"
                        android:padding="10sp"
                        android:src="@drawable/apoorv"
                        />
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Apoorv Gaurav Agarwal"
                            android:textColor="#000000"
                            android:padding="15sp"
                            android:textSize="20sp"
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="9610161917"
                            android:textColor="#000000"
                            android:padding="15sp"
                            android:textSize="20sp"
                            android:id="@+id/num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="30dp" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_below="@id/card1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#E6E6E6"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="8dp"
            android:layout_margin="5sp"
            android:padding="5sp"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:id="@+id/contact1"
                        android:padding="10sp"
                        android:src="@drawable/prageet"
                        />
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Prageet N. Gupta"
                            android:textColor="#000000"
                            android:padding="15sp"
                            android:textSize="20sp"
                            android:id="@+id/name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="8741940380"
                            android:textColor="#000000"
                            android:padding="15sp"
                            android:textSize="20sp"
                            android:id="@+id/numbew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="30dp" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_marginBottom="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="VirZon"
            android:textSize="37sp"
            android:layout_above="@+id/card1"
            android:layout_toRightOf="@+id/img"
            android:layout_toEndOf="@+id/img" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="250sp"
            android:layout_height="40sp"
            android:layout_marginBottom="12dp"
            android:text="Development"
            android:textSize="35sp"
            android:layout_above="@+id/card1"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

    </RelativeLayout>
</ScrollView>