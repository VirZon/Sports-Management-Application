<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/cavorts"
        android:layout_width="350sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/img_cav"/>


    <EditText
        android:hint="Team Name"
        android:layout_below="@id/img_cav"
        android:layout_alignParentLeft="true"
        android:layout_width="170sp"
        android:layout_marginLeft="10sp"
        android:layout_height="wrap_content"
        android:id="@+id/team_name"/>
    <EditText
        android:layout_marginRight="10sp"
        android:hint="Captain Name"
        android:layout_below="@id/img_cav"
        android:layout_alignParentRight="true"
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:id="@+id/captain_name"/>
    <EditText
        android:layout_below="@id/team_name"
        android:layout_marginLeft="10sp"
        android:hint="Player Name"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:id="@+id/player_name"
        />
    <EditText
        android:hint="Roll no"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/player_name"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:id="@+id/roll_no"/>
    <Spinner
        android:id="@+id/sem"
        android:layout_marginLeft="50sp"
        android:layout_width="80sp"
        android:layout_height="30sp"
        android:layout_below="@id/roll_no"
        android:entries="@array/sem"
        >
    </Spinner>
    <Spinner
        android:id="@+id/branch"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50sp"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_below="@id/roll_no"
        android:entries="@array/branch"
        ></Spinner>
    <EditText
        android:hint="Email"
        android:layout_marginLeft="10sp"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/sem"/>
    <EditText
        android:hint="Contact"
        android:layout_marginLeft="10sp"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:id="@+id/contact_no"
        android:layout_below="@id/email"
        />
    <Spinner
        android:id="@+id/game_id"
        android:layout_gravity="center"
        android:layout_width="250sp"
        android:layout_height="30sp"
        android:layout_below="@id/contact_no"
        android:layout_marginLeft="50sp"
        android:entries="@array/games"
        ></Spinner>
    <Button
        android:id="@+id/btn"
        android:textSize="15sp"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_id"/>
</RelativeLayout>